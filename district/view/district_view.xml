<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    <record id="form_district_district" model="ir.ui.view">
      <field name="name">district.form_district_district</field>
      <field name="model">district.district</field>
      <field name="arch" type="xml">
        <form string="District">
          <sheet>
            <group>
                <group>
                    <field name="name"/>
                </group>
                <group>
                    <field name="state_id"/>
                    <field name="country_id"/>
                </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="tree_district_district" model="ir.ui.view">
      <field name="name">district.tree_district_district</field>
      <field name="model">district.district</field>
      <field name="arch" type="xml">
        <tree string="more">
            <field name="name"/>
            <field name="state_id"/>
            <field name="country_id"/>
        </tree>
      </field>
    </record>

    <record id="search_district_district" model="ir.ui.view">
      <field name="name">district.search_district_district</field>
      <field name="model">district.district</field>
      <field name="arch" type="xml">
        <search string="District">
            <field name="name"/>
            <field name="state_id"/>
            <field name="country_id"/>
        </search>
      </field>
    </record>

    <record id="action_district_district" model="ir.actions.act_window">
      <field name="name">District</field>
      <field name="res_model">district.district</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>     
    </record>

    <menuitem id="menu_district_district" name="District" parent="base.menu_config_address_book"
      sequence="80"
      action="action_district_district"/>
  </data>
</openerp>
